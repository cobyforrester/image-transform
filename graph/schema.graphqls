scalar Image
scalar Int64

type Query {
  image: Image!
}

input ImageJSON {
  base64: String!
  options: ImageOptions!
}
input ImageOptions {
  blur: Int64
  scale: Int64
  grayscale: Boolean
  invert: Boolean
  rotate: Int64
}

input ImageInstructions {
  image: Image!
  tint: Boolean
}

input ImageJSONInput {
  image: ImageJSON!
}

type Mutation {
  transformImage(input: ImageInstructions!): Image!
  transformJSONImage(input: ImageJSONInput!): String!
}