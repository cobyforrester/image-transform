scalar Image

type Query {
  image: Image!
}

input ImageInstructions {
  image: Image!
  tint: Boolean
}

input ImageJSON {
  base64: String!
  options: ImageOptions!
}
input ImageOptions {
  blur: Float
  scale: Float
  grayscale: Boolean
  invert: Boolean
  rotate: Float
}

input ImageJSONInput {
  image: ImageJSON!
}

type Mutation {
  transformImage(input: ImageInstructions!): Image!
  transformJSONImage(input: ImageJSONInput!): String!
}